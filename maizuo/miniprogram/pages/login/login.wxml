<view class="logBox">
  <image src="https://assets.maizuo.com/h5/mz-auth/public/app/img/logo.19ca0be.png"></image>
</view>
<!-- 登录界面 -->
<view class="loginBox">
  <view>
    <label>用户名：</label>
    <input type="text" placeholder="请输入用户名" bindinput="handleUsername" value="{{username}}"></input>
  </view>
  <view>
    <label>密码：</label>
    <input type="password" placeholder="请输入密码" bindinput="handlePassword" value="{{password}}"></input>
  </view>
</view>

<!-- 登录按钮 -->
<view class="btnBox">
  <button class="btn_login" catchtap="handleSubmit">登录</button>
</view>