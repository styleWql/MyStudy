.header {
  width: 100%;
  background-image: url(https://assets.maizuo.com/h5/v5/public/app/img/bg.6837f67.png);
  background-repeat: no-repeat;
  background-size: cover;
}

.avatar {
  text-align: center;
  height: 350rpx;
  display: flex;
  align-items: center;
  justify-content: start;
  color: #fff;
  margin-left: 30px;
}

.avatar image {
  width: 180rpx;
  height: 180rpx;
  border: 2px solid white;
  border-radius: 50%;
}

.nick-name {
  margin-left: 20px;
}

.my-order-tab {
  width: 100%;
  margin: 0 auto;
  display: flex;
  text-align: center;
  font-size: 13px;
  padding: 0;
  height: 79px;
  background: #fff;
  margin-bottom: 10px;
  align-items: center;
  color: #797d82;
}

.my-order-tab image{
  width: 26px;
  height: 26px;
}

.my-order-tab>view{
  width: 50%;
  height: 120rpx;
}

.content{
  background-color: #f4f4f4;
}

.funBox{
  background-color: #fff;
}

.funBox image{
   width: 26px;
   height: 26px;
}

.funBox>view{
  height: 50px;
  padding: 0 15px;
  border-bottom: 1px solid rgba(220, 220, 220, 0.171);
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #191a1b;
}

.funBox>view>view{
  display: flex;
  align-items: center;
}

.funBox>view>view>text{
  margin-left: 10px;
}
